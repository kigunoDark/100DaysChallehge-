<%- include('../layouts/navbar.ejs')%>

<main  class="  "> 
<div  class="container ">

    <% if (users.length > 0 ) { %>
  <table  class="team-table highlight" >
  <thead>
  <caption class="accepted">  Участники без команды </caption>
  
  
    <tr>
        <th>ФИО</th>
        <th>Должность</th>
        <th>Город</th>
        <th>Университет</th>
        <th>Профиль</th>

        <% if (roleId === 4 ) {%>
        <th>Пригласить</th>
        <% } %>
    </tr>
  </thead>
  <% for (let user of users ) { %>
  <tbody>
 
  
    <tr class="<%if(user.id === activeUserId) { %> accepted-user <% }%>">
      <td><%= user.surname %> <%= user.name%> <%= user.secondName%></td>
      <td><%= user.position %> </td>
      <td><%= user.city %> </td>
      <td><%= user.univercity %> </td>
      <td>
        <%if(user.id === activeUserId) { %>
          <a  href="/profile"  class="teamEdit " > <i class="fas fa-info-circle"></i> </a>
        <% } else { %>
          <a  href="/user-details/<%= user.id %>"  class="teamEdit " > <i class="fas fa-info-circle"></i> </a>
        <% } %> 
         
      </td>
      <td>

      <% if (roleId === 4 ) {%>
      <form class="adminInt" id="delete-teammate" action="/admin/delete-mate" method="POST"> 
        <input type="hidden" name="_csrf" value="<%=csrfToken%>">
        <input type="hidden" value="<%= user.id %>" name="teamMateId">
        <button type="submint"  class="teamDelete">  <i class=" fas fa-user-minus"></i> </button>
      </form>
      <% } %>
      </td>
     
    </tr>
  </tbody>
  <% } %>
</table>

<% } else { %>
<div class="container-wrap">
    <h1 class="center error"> Сотрудников  в штате не утвердили</h1>
    <form action="/admin/add-teammate">
        <button class="right loginButton "  type="submit">Добавить</button>
    </form>
</div>
<% } %>
</div>
</main>


<%- include('../layouts/footer.ejs') %>